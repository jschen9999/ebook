<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#D2E9FF"
    tools:context=".output">

    <RelativeLayout
        android:layout_width="6000dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="#005AB5" />

    <Button
        android:id="@+id/introtitle"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="60dp"
        android:background="#005AB5"
        android:clickable="true"
        android:text="不可電子書店"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#F0F0F0"
        android:textSize="40dp"
        android:typeface="monospace" />

    <ImageButton
        android:id="@+id/introhome"
        android:layout_width="74dp"
        android:layout_height="90dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="0dp"
        android:background="	#2894FF"
        android:scaleType="fitCenter"
        android:src="@drawable/home" />

    <RelativeLayout
        android:layout_width="6000dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="180dp"
        android:background="#0066CC">

        <Button
            android:id="@+id/mybook"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="60dp"
            android:background="#0066CC"
            android:clickable="true"
            android:text="我的書櫃"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#F0F0F0"
            android:textSize="40dp"
            android:typeface="monospace" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="6000dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="360dp"
        android:background="	#0072E3" />

    <Button
        android:id="@+id/mylike"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="420dp"
        android:background="#0072E3"
        android:clickable="true"
        android:text="我的最愛"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#F0F0F0"
        android:textSize="40dp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="250dp"
        android:paddingLeft="@dimen/output_margin_buffer"
        android:text="問題回報"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#0066CC"
        android:textSize="5dp"
        android:typeface="monospace"/>


    <RelativeLayout
        android:layout_width="6000dp"
        android:layout_height="2000dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="540dp"
        android:text="0"
        android:background="	#0080FF" />

    <Button
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="590dp"
        android:background="#0080FF"
        android:clickable="true"
        android:text="關於我們"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#F0F0F0"
        android:textSize="40dp"
        android:typeface="monospace" />

    </RelativeLayout >

