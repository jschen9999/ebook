<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#D2E9FF"
    tools:context=".output">

    <RelativeLayout
        android:layout_width="6000dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="#003060">

        <ImageButton
            android:id="@+id/countlogin"
            android:layout_width="140dp"
            android:layout_height="248dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="15dp"
            android:background="#003060"
            android:scaleType="fitCenter"
            android:src="@drawable/count2" />

        <ImageButton
            android:id="@+id/loghome"
            android:layout_width="74dp"
            android:layout_height="90dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="0dp"
            android:background="#005AB5"
            android:scaleType="fitCenter"
            android:src="@drawable/home" />

    </RelativeLayout>

    <TextView
        android:id="@+id/logpeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="250dp"
        android:paddingLeft="@dimen/output_margin_buffer"
        android:text="會員登入"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#003060"
        android:textSize="40dp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/logemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="350dp"
        android:paddingLeft="@dimen/output_margin_buffer"
        android:text="Email:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#003060"
        android:textSize="30dp"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/logemailedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/logemail"
        android:layout_alignBottom="@+id/logemail"
        android:layout_toRightOf="@+id/logemail"
        android:ems="10"
        android:hint="Email"
        android:paddingRight="30dp"
        android:selectAllOnFocus="true"
        android:textAppearance="?android:attr/textAppearanceMedium">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/logpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="430dp"
        android:paddingLeft="@dimen/output_margin_buffer"
        android:text="密碼:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#003060"
        android:textSize="30dp"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/logpasswordedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/logpassword"
        android:layout_alignBottom="@+id/logpassword"
        android:layout_toRightOf="@+id/logpassword"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingRight="30dp"
        android:selectAllOnFocus="true"
        android:textAppearance="?android:attr/textAppearanceMedium">

        <requestFocus />
    </EditText>
    <Button
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="490dp"
        android:text="登入"></Button>


    <TextView
        android:id="@+id/forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="550dp"
        android:paddingLeft="@dimen/output_margin_buffer"
        android:text="忘記密碼?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="	#272727"
        android:textSize="20dp"
        android:typeface="monospace" />

    <ImageButton
        android:id="@+id/question"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="548dp"
        android:background="#D2E9FF"
        android:scaleType="fitCenter"
        android:src="@drawable/question" />

    <TextView
        android:id="@+id/createnewaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="600dp"
        android:paddingLeft="@dimen/output_margin_buffer"
        android:text="建立新帳戶"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="	#272727"
        android:textSize="20dp"
        android:typeface="monospace" />


</RelativeLayout>
