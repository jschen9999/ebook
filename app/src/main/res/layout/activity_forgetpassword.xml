<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#D2E9FF"
    tools:context=".forgetpassword">

    <RelativeLayout
        android:layout_width="6000dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="#003060">

        <ImageButton
            android:id="@+id/countlogin"
            android:layout_width="140dp"
            android:layout_height="248dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="15dp"
            android:background="#003060"
            android:scaleType="fitCenter"
            android:src="@drawable/count2" />

        <ImageButton
            android:id="@+id/loghome"
            android:layout_width="74dp"
            android:layout_height="90dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="0dp"
            android:background="#005AB5"
            android:scaleType="fitCenter"
            android:src="@drawable/home" />

    </RelativeLayout>

    <TextView
        android:id="@+id/logpeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="250dp"
        android:paddingLeft="@dimen/output_margin_buffer"
        android:text="重設密碼"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#003060"
        android:textSize="50dp"
        android:typeface="monospace" />



    <TextView
        android:id="@+id/resetemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="340dp"
        android:paddingLeft="@dimen/output_margin_buffer"
        android:text="Email:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#003060"
        android:textSize="30dp"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/resetemailedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/resetemail"
        android:layout_alignBottom="@+id/resetemail"
        android:layout_toRightOf="@+id/resetemail"
        android:ems="10"
        android:hint="Email"
        android:paddingRight="30dp"
        android:selectAllOnFocus="true"
        android:textAppearance="?android:attr/textAppearanceMedium">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/resetbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="560dp"
        android:text="Reset"></Button>



</RelativeLayout>
