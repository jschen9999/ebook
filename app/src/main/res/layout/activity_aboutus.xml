<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#D2E9FF"
    tools:context=".output">

    <RelativeLayout
        android:layout_width="6000dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="#003060">


        <ImageButton
            android:id="@+id/aboutusclose"
            android:layout_width="87dp"
            android:layout_height="84dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="#003060"
            android:scaleType="fitCenter"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/aboutusback"
            android:layout_width="74dp"
            android:layout_height="90dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="0dp"
            android:background="#003060"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/aboutustitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="89dp"
            android:layout_marginTop="78dp"
            android:paddingLeft="@dimen/output_margin_buffer"
            android:text="關於我們"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FBFBFF"
            android:textSize="50dp"
            android:typeface="monospace" />

    </RelativeLayout>

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="580dp"
        android:paddingLeft="@dimen/output_margin_buffer"
        android:text="由1081535陳怡潔"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="	#003D79"
        android:textSize="30dp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/abouttwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="630dp"
        android:paddingLeft="@dimen/output_margin_buffer"
        android:text="1083342黃予庭製作"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="	#003D79"
        android:textSize="30dp"
        android:typeface="monospace" />


    <ImageButton
        android:id="@+id/backpackbook"
        android:layout_width="233dp"
        android:layout_height="415dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="150dp"
        android:background="#D2E9FF"
        android:scaleType="fitCenter"
        android:src="@drawable/fon" />
</RelativeLayout>
